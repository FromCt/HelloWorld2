<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f3f3f3"
    android:focusableInTouchMode="true" >

    <include layout="@layout/default_head2" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/head"
        android:background="#fff"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:background="#f1eff0" >

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="分销伙伴"
                android:textColor="#000" />

            <ImageView
                android:id="@+id/del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:onClick="doDel"
                android:padding="5dp"
                android:src="@drawable/delete" />
        </RelativeLayout>

        <ScrollView
            android:id="@+id/listView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#fffff7" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:background="#eee"
                    android:orientation="vertical"
                    android:padding="1dp" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="伙伴姓名"
                            android:textColor="#333"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/name"
                            android:layout_width="fill_parent"
                            android:layout_height="36dp"
                            android:background="@null"
                            android:hint="请输入伙伴姓名"
                            android:text=""
                            android:textColor="#fda24a"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="#eee" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="伙伴电话"
                            android:textColor="#333"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/phone"
                            android:layout_width="fill_parent"
                            android:layout_height="36dp"
                            android:background="@null"
                            android:hint="请输入伙伴电话"
                            android:inputType="phone"
                            android:text=""
                            android:textColor="#fda24a"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="#eee" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="身份证号"
                            android:textColor="#333"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/citizenId"
                            android:layout_width="fill_parent"
                            android:layout_height="36dp"
                            android:background="@null"
                            android:hint="请输入身份证号"
                            android:text=""
                            android:textColor="#fda24a"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="#eee" />

                    <LinearLayout
                        android:id="@+id/bankView"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="开户银行"
                            android:textColor="#333"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/bank"
                            android:layout_width="fill_parent"
                            android:layout_height="36dp"
                            android:background="@null"
                            android:hint=""
                            android:inputType="phone"
                            android:text=""
                            android:textColor="#fda24a"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/bankView2"
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="#eee" />

                    <LinearLayout
                        android:id="@+id/bankAccountView"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="开户行账号"
                            android:textColor="#333"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/bankAccount"
                            android:layout_width="fill_parent"
                            android:layout_height="36dp"
                            android:background="@null"
                            android:hint=""
                            android:inputType="phone"
                            android:text=""
                            android:textColor="#fda24a"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/bankAccountView2"
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="#eee" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="渠道类别"
                            android:textColor="#333"
                            android:textSize="16sp" />

                        <Button
                            android:id="@+id/channel"
                            android:layout_width="fill_parent"
                            android:layout_height="36dp"
                            android:background="@null"
                            android:gravity="left|center_vertical"
                            android:text=""
                            android:textColor="#fda24a"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="#eee" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="所属分公司"
                            android:textColor="#333"
                            android:textSize="16sp" />

                        <Button
                            android:id="@+id/company"
                            android:layout_width="fill_parent"
                            android:layout_height="36dp"
                            android:background="@null"
                            android:gravity="left|center_vertical"
                            android:text=""
                            android:textColor="#fda24a"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="#eee" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="所属支局"
                            android:textColor="#333"
                            android:textSize="16sp" />

                        <Button
                            android:id="@+id/station"
                            android:layout_width="fill_parent"
                            android:layout_height="36dp"
                            android:background="@null"
                            android:gravity="left|center_vertical"
                            android:text=""
                            android:textColor="#fda24a"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="#eee" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:padding="5dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="收益查看权限"
                            android:textColor="#333"
                            android:textSize="16sp" />

                        <RadioGroup
                            android:id="@+id/profitView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="允许查看"
                                android:textSize="14sp"
                                android:textColor="#333" />

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="禁止查看"
                                android:textSize="14sp"
                                android:textColor="#333" />
                        </RadioGroup>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="#eee" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:padding="5dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="酬金模式权限"
                            android:textColor="#333"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:id="@+id/commissionMode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="#eee" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:padding="5dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="酬金分配控制"
                            android:textColor="#333"
                            android:textSize="16sp" />

                        <RadioGroup
                            android:id="@+id/commissionControl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="分销伙伴拿全额酬金"
                                android:textColor="#333"
                                android:textSize="14sp" />

                            <RadioButton
                                android:id="@+id/btnPercent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="分销伙伴拿 99% 酬金"
                                android:textColor="#333"
                                android:textSize="14sp" />

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="我拿全额酬金"
                                android:textColor="#333"
                                android:textSize="14sp" />
                        </RadioGroup>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="#eee" />

                    <LinearLayout
                        android:id="@+id/codeview"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:padding="5dp" >

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="验    证    码"
                            android:textColor="#333"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/code"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:inputType="phone"
                            android:text=""
                            android:textColor="#fda24a"
                            android:textSize="16sp" />

                        <Button
                            android:id="@+id/btn_yzm"
                            android:layout_width="80dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/btn_blue_bg"
                            android:text="获取验证码"
                            android:textColor="#fff"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:background="@drawable/btn_yellow_bg"
                    android:onClick="doSave"
                    android:text="保        存"
                    android:textColor="#fff"
                    android:textSize="18sp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>