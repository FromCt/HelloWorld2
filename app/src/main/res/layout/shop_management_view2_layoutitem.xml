<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#F8F8F8"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/smv2_line"
        android:layout_margin="3dip"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#CBCBCB"
        android:orientation="vertical"></LinearLayout>
    <TextView
        android:id="@+id/smvi_packageName"
        android:layout_margin="5dip"
        android:textColor="@color/shopManagementButon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="魅蓝note2 大礼包+100m光纤宽带+4G手机+电信电视"/>


    <LinearLayout
        android:layout_margin="3dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/smvi_packagePrice"
            android:textColor="#FE6000"
            android:layout_marginLeft="0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="￥:1290"/>

        <TextView
            android:id="@+id/smvi_amount"
            android:textColor="#d92316"
            android:visibility="gone"
            android:layout_marginLeft="5dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="优惠金额￥:1290"/>

        <TextView
            android:id="@+id/smvi_packageCompany"
            android:layout_marginLeft="10dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重庆市赛玛特科技有限公司"/>


    </LinearLayout>

    <LinearLayout
        android:layout_margin="3dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:visibility="visible"
            android:id="@+id/smvi_price1_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="终端推广返利:"/>

        <TextView
            android:visibility="visible"
            android:id="@+id/smvi_price1"
            android:layout_marginLeft="3dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FE6000"
            android:text="￥234"/>

        <TextView
            android:layout_marginLeft="5dp"
            android:visibility="visible"
            android:id="@+id/smvi_price4_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="坐扣返利:"/>

        <TextView
            android:visibility="visible"
            android:id="@+id/smvi_price4"
            android:layout_marginLeft="3dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FE6000"
            android:text="￥234"/>

        <TextView
            android:visibility="visible"
            android:id="@+id/smvi_price2_name"
            android:layout_marginLeft="5dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="套餐推广最高返利:"/>

        <TextView
            android:visibility="visible"
            android:id="@+id/smvi_price2"
            android:layout_marginLeft="5dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FE6000"
            android:text="￥234"/>


        <TextView
            android:id="@+id/smvi_price3_name"
            android:visibility="gone"
            android:layout_marginLeft="8dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="集团返利"/>

        <TextView
            android:id="@+id/smvi_price3"
            android:visibility="gone"
            android:layout_marginLeft="3dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#FE6000"
            android:text="￥234"/>


    </LinearLayout>

    <RelativeLayout
        android:layout_margin="8dip"
        android:layout_marginBottom="5dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:visibility="gone"
            android:id="@+id/smv2_setMoney"
            android:textColor="@color/white"
            android:background="#FE6000"
            android:layout_marginLeft="3dip"
            android:layout_width="100dip"
            android:layout_height="30dip"
            android:text="优惠金额设置"/>

        <Button
            android:id="@+id/smv2_withdraw"
            android:textColor="@color/white"
            android:background="#148FCB"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="3dip"
            android:layout_width="100dip"
            android:layout_height="30dip"
            android:text="加入已选区"/>


    </RelativeLayout>


</LinearLayout>