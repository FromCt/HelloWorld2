        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:background="#fff"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >

            <TextView
                android:layout_width="8dp"
                android:layout_height="match_parent"
                android:text="*"
                android:layout_gravity="center_vertical"
                android:textColor="@color/red"
                android:gravity="center_vertical"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="客户需求"
                android:layout_gravity="center_vertical"
                android:textColor="#333"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/intention"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:gravity="left|top"
                android:drawableLeft="@drawable/edit_left"
                android:text=""
                android:background="@drawable/background_cicle_gray_duck_light"
                android:textColor="#fda24a"
                android:textSize="16sp"
                android:layout_margin="5dp"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="8dp"
                android:layout_height="match_parent"
                android:text=" "
                android:layout_gravity="center_vertical"
                android:textColor="@color/red"
                android:gravity="center_vertical"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="到店优惠"
                android:layout_gravity="center_vertical"
                android:textColor="#333"
                android:gravity="center_vertical"
                android:textSize="16sp"/>
          <LinearLayout
              android:layout_width="fill_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
            <EditText
                android:id="@+id/shopDiscount"
                android:hint="  输入字数控制在20字内"
                android:textColor="@color/button_red"
                android:layout_margin="5dp"
                android:drawableLeft="@drawable/edit_left"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="left|top"
                android:background="@drawable/background_cicle_gray_duck_light"
                android:textSize="16sp"/>
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="注：请确认到店优惠已事先和接单电宽中心确认，用户到店可享"
                  android:textSize="8sp"
                  android:textColor="@color/black"
                  android:layout_marginLeft="5dp"
                  />
          </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#fff"
            >

            <TextView
                android:id="@+id/a"
                android:layout_width="8dp"
                android:layout_height="match_parent"
                android:text="*"
                android:layout_gravity="center_vertical"
                android:textColor="@color/red"
                android:gravity="center_vertical"
                android:textSize="16sp"/>

            <TextView
                android:layout_toRightOf="@id/a"
                android:id="@+id/tv_receiver"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="接单人"
                android:gravity="center_vertical"
                android:textColor="#333"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/receiverId"
                android:layout_toRightOf="@+id/tv_receiver"
                android:layout_toLeftOf="@+id/btn_search"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:inputType="phone"
                android:layout_margin="5dp"
                android:drawableLeft="@drawable/edit_left"
                android:hint="请输入手机号码模糊查询"
                android:textColorHint="@color/lightgrey"
                android:background="@drawable/background_cicle_gray_duck_light"
                android:textColor="#fda24a"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/receiver_name"
                android:layout_toLeftOf="@+id/btn_search"
                android:layout_marginRight="5dp"
                android:textColor="#fda24a"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <Button
                android:id="@+id/btn_search"
                android:onClick="doSearchReveiver"
                android:layout_margin="5dp"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:background="@drawable/background_cicle_blue_select"
                android:text="查询"
                android:textColor="#fff"
                android:textSize="14sp"
                />
        </RelativeLayout>



        <LinearLayout
            android:id="@+id/ll_county_name"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            android:gravity="center"
            android:background="#fff">
            <TextView
                android:layout_gravity="center"
                android:id="@+id/tv_county_name"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#fda24a"
                android:textSize="16sp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="95dp"
            android:layout_marginRight="10dp"
            android:background="#fff">
            <TextView
                android:text="请输入支局协同受理人员的电话"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/red"
                android:textSize="16sp"
                />

        </LinearLayout>

        <Button
            android:id="@+id/update"
            android:onClick="doSubmit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_yellow_bg"
            android:text="提        交"
            android:textColor="#fff"
            android:textSize="18sp"/>


    </LinearLayout>
</ScrollView>
