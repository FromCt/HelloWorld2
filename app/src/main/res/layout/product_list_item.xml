<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rect_bg"
    android:onClick="doItemClick"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/hybrid_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="#f8f8f8" >

        <ImageView
            android:id="@+id/image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/product" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/image"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/text_spmc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/text_spmc"
                android:drawablePadding="3dp"
                android:layout_margin="3dp"
                android:textColor="#f00" />

            <TextView
                android:id="@+id/text_jg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/text_jg"
                android:drawablePadding="3dp"
                android:layout_margin="3dp"
                android:textColor="#f00" />

            <TextView
                android:id="@+id/text_sj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/text_sj"
                android:drawablePadding="3dp"
                android:layout_margin="3dp"
                android:textColor="#f00" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>