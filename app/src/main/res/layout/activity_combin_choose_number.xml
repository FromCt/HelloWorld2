<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:padding="5dip"
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/head_bg" >

        <ImageView
            android:id="@+id/btn_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:contentDescription="@null"
            android:src="@drawable/logo" />

        <RelativeLayout
            android:visibility="gone"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:onClick="doUserIcon"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" >

            <TextView
                android:id="@+id/head_tv_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:textColor="#333"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="张三李四王五赵六" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/head_tv_user"
                android:src="@drawable/ico_user" />
        </RelativeLayout>

        <Button
            android:id="@+id/combin_choose_number_button"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="80dp"
            android:text="确认"
            android:layout_marginRight="5dip"
            android:background="@drawable/background_combin_selector"
            android:textSize="18sp"
            android:gravity="center"
            android:visibility="visible"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <LinearLayout
        android:background="#F3F3F3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

       <TextView
           android:padding="5dip"
           android:layout_width="0dip"
           android:layout_weight="1"
           android:text="号码"
           android:textSize="18sp"
           android:gravity="center"
           android:layout_height="wrap_content" />

        <TextView
            android:padding="5dip"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:text="号码"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <GridView
        android:id="@+id/combin_choose_number_gridView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:columnWidth="90dp"
        android:numColumns="2"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="10dp"
        android:stretchMode="columnWidth"
        android:gravity="center"
        android:background="@color/transparent"
        />


</LinearLayout>