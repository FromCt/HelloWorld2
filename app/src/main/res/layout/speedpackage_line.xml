<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/package1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:background="#c7e9fe" >

            <ImageView
                android:id="@+id/speedpackage_icon1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/speedpackage" />

            <TextView
                android:id="@+id/package1name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="e9-89套餐"
                android:textColor="#235777" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/package2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:background="#c7e9fe" >

            <ImageView
                android:id="@+id/speedpackage_icon2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/speedpackage" />

            <TextView
                android:id="@+id/package2name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="e9-89套餐"
                android:textColor="#235777" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>