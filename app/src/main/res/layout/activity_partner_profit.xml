<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f3f3f3"
    android:focusableInTouchMode="true">

    <include layout="@layout/default_head2" />

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_below="@id/head"
        android:background="#fff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="协同伙伴收益"
            android:textColor="#000" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_search"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top"
        android:background="#eee">

        <Button
            android:id="@+id/year"
            android:onClick="doYear"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/select_bg"
            android:text="2015"
            android:textColor="#333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/year"
            android:text="年"
            android:textColor="#000"
            android:textSize="18sp" />

        <Button
            android:id="@+id/mouth"
            android:onClick="doMouth"
            android:layout_width="60dp"
            android:layout_height="25sp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/tv_1"
            android:background="@drawable/select_bg"
            android:text="01"
            android:textColor="#333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:text="月"
            android:textColor="#000"
            android:textSize="18sp"
            android:layout_toRightOf="@+id/mouth" />

        <Button
            android:id="@+id/search_all"
            android:onClick="doAll"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_blue_bg"
            android:text="全    部"
            android:textColor="#fff"
            android:textSize="16sp" />

        <!--<Button-->
            <!--android:onClick="doSearch"-->
            <!--android:layout_width="70dp"-->
            <!--android:layout_height="25dp"-->
            <!--android:layout_marginRight="10dp"-->
            <!--android:background="@drawable/btn_blue_bg"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:text="查    询"-->
            <!--android:textColor="#fff"-->
            <!--android:textSize="16sp"-->
            <!--android:layout_alignParentRight="true" />-->

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_line"
        android:layout_below="@id/rl_search"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#fff"
        ></RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_below="@id/ll_line"
        android:background="#f1eff0"
        >

        <TextView
            android:id="@+id/orderIdtitle"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="协同伙伴"
            android:textColor="#333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/goodstitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/orderIdtitle"
            android:text="收益"
            android:textColor="#333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/valuetitle"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="操作"
            android:textColor="#333"
            android:textSize="16sp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/ll_line_bottom"
        android:layout_below="@id/rl_title"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#fff"
        ></RelativeLayout>

    <!--<ListView-->
        <!--android:layout_below="@id/ll_line_bottom"-->
        <!--android:id="@+id/listView"-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="fill_parent"-->
        <!--android:divider="@android:color/transparent"-->
        <!--android:dividerHeight="3dp"-->
        <!--android:listSelector="@android:color/transparent" />-->

    <com.crunii.android.fxpt.view.AppleListView
        android:layout_below="@id/ll_line_bottom"
        android:id="@+id/listView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:divider="@android:color/transparent"
        android:dividerHeight="3dp"
        android:listSelector="@android:color/transparent" />

    <RelativeLayout
        android:id="@+id/noneView"
        android:layout_below="@id/ll_line_bottom"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#eeeeee"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/noneImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:src="@drawable/ico_none" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/noneImage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="您还没有相关订单\n暂无相关数据"
            android:textColor="#9e9e9e"
            android:textSize="20sp" />
</RelativeLayout>

</RelativeLayout>