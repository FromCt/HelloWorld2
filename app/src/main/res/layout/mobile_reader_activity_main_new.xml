<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff"
    android:orientation="vertical">

    <!--<TextView-->
        <!--android:id="@+id/placeHolder"-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="105dp" />-->
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#fff">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:background="#e4ecf6"
                android:gravity="center"
                android:text="身份证信息读取"
                android:textColor="#fc582a"
                android:textSize="18sp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="身份证正面"
                android:textColor="@color/indianred" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/identify_image_front"
                    android:layout_width="480dp"
                    android:layout_height="260dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/identify_front" />
                <!---->

                <!--  姓名  -->
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="73dp"
                    android:layout_marginStart="73dp"
                    android:layout_marginTop="38dp"
                    android:autoText="false"
                    android:textColor="@color/chocolate"
                    android:textSize="16sp"></TextView>

                <!--  男  -->
                <TextView
                    android:id="@+id/tv_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv_name"
                    android:layout_alignStart="@+id/tv_name"
                    android:layout_below="@+id/tv_name"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/chocolate"
                    android:textSize="16sp"></TextView>

                <!--  汉族  -->
                <TextView
                    android:id="@+id/tv_ehtnic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tv_sex"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/chocolate"
                    android:textSize="16sp"></TextView>

                <!--  年  -->
                <TextView
                    android:id="@+id/tv_birthday"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv_sex"
                    android:layout_alignStart="@+id/tv_sex"
                    android:layout_below="@+id/tv_sex"
                    android:layout_marginTop="12dp"
                    android:textColor="@color/chocolate"
                    android:textSize="16sp"></TextView>
                <!--  月  -->
                <TextView
                    android:id="@+id/tv_month"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tv_birthday"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="14dp"
                    android:layout_toRightOf="@+id/tv_birthday"
                    android:textColor="@color/chocolate"
                    android:textSize="16sp" />
                <!--  日  -->
                <TextView
                    android:id="@+id/tv_day"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/tv_address"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/tv_month"
                    android:textColor="@color/chocolate"
                    android:textSize="16sp" />


                <!--  住址  -->
                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv_birthday"
                    android:layout_below="@+id/tv_birthday"
                    android:layout_marginRight="5px"
                    android:layout_marginTop="13dp"
                    android:textColor="@color/chocolate"
                    android:textSize="16sp"></TextView>
                <!--  身份证号  -->
                <TextView
                    android:id="@+id/tv_number"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_address"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="40dp"
                    android:textColor="@color/chocolate"
                    android:textSize="16sp"></TextView>

                <ImageView
                    android:id="@+id/iv_photo"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/tmp"
                    android:src="@drawable/tmp"></ImageView>


            </RelativeLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="身份证反面"
                android:textColor="@color/indianred" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/identify_image_reverse"
                    android:layout_width="480dp"
                    android:layout_height="260dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/identify_reverse" />
                <!---->
                <!--  签发机关  -->
                <TextView
                    android:id="@+id/tv_signed"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="154dp"
                    android:layout_marginTop="185dp"
                    android:textColor="@color/chocolate"
                    android:textSize="14sp"></TextView>
                <!--  有效期限  -->
                <TextView
                    android:id="@+id/tv_validate"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_signed"
                    android:layout_marginLeft="154dp"
                    android:layout_marginTop="12dp"
                    android:textColor="@color/chocolate"
                    android:textSize="14sp"></TextView>


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/buttonContent"
                android:layout_marginTop="20dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tv_info"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/buttonNFC"
                    android:background="@drawable/button_state_background_style"
                    android:textColor="@color/button_state_textcolor_style"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:text="扫描蓝牙设备"
                     />

                <Button
                    android:id="@+id/buttonOTG"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/button_state_background_style"
                    android:textColor="@color/button_state_textcolor_style"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:text="OTG方式读卡"
                    />

                </LinearLayout>
            <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_info"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="horizontal" >
                <Button
                    android:id="@+id/buttonBT"
                    android:background="@drawable/button_state_background_style"
                    android:textColor="@color/button_state_textcolor_style"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:text="蓝牙方式读卡"
                    />

                <Button
                    android:id="@+id/backfx"
                    android:onClick="backfx"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/button_state_background_style"
                    android:textColor="@color/button_state_textcolor_style"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:text="上传照片"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="⊙" />




        </LinearLayout>

    </ScrollView>
</LinearLayout>





