<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#fff">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:background="#e4ecf6"
                android:gravity="center"
                android:text="身份证信息读取"
                android:textColor="#fc582a"
                android:textSize="18sp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="身份证正面"
                android:textColor="@color/indianred" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/identify_image_front"
                    android:layout_width="480dp"
                    android:layout_height="260dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/identify_front" />
                <!---->

                <!--  姓名  -->
                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="73dp"
                    android:layout_marginStart="73dp"
                    android:layout_marginTop="38dp"
                    android:autoText="false"
                    android:textColor="@color/chocolate"
                    android:textSize="16sp"></TextView>

                <!--  男  -->
                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView1"
                    android:layout_alignStart="@+id/textView1"
                    android:layout_below="@+id/textView1"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/chocolate"
                    android:textSize="16sp"></TextView>

                <!--  汉族  -->
                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/textView2"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/chocolate"
                    android:textSize="16sp"></TextView>

                <!--  年  -->
                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView2"
                    android:layout_alignStart="@+id/textView2"
                    android:layout_below="@+id/textView2"
                    android:layout_marginTop="12dp"
                    android:textColor="@color/chocolate"
                    android:textSize="16sp"></TextView>
                <!--  月  -->
                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/textView4"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="14dp"
                    android:layout_toRightOf="@+id/textView4"
                    android:textColor="@color/chocolate"
                    android:textSize="16sp" />
                <!--  日  -->
                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/textView5"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/textView14"
                    android:textColor="@color/chocolate"
                    android:textSize="16sp" />


                <!--  住址  -->
                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView4"
                    android:layout_below="@+id/textView4"
                    android:layout_marginRight="5px"
                    android:layout_marginTop="13dp"
                    android:textColor="@color/chocolate"
                    android:textSize="16sp"></TextView>
                <!--  身份证号  -->
                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView5"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="40dp"
                    android:textColor="@color/chocolate"
                    android:textSize="16sp"></TextView>

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/tmp"
                    android:src="@drawable/tmp"></ImageView>


            </RelativeLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="身份证反面"
                android:textColor="@color/indianred" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/identify_image_reverse"
                    android:layout_width="480dp"
                    android:layout_height="260dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/identify_reverse" />
                <!---->
                <!--  签发机关  -->
                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="154dp"
                    android:layout_marginTop="185dp"
                    android:textColor="@color/chocolate"
                    android:textSize="14sp"></TextView>
                <!--  有效期限  -->
                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView7"
                    android:layout_marginLeft="154dp"
                    android:layout_marginTop="12dp"
                    android:textColor="@color/chocolate"
                    android:textSize="14sp"></TextView>


            </RelativeLayout>

            <RelativeLayout
                android:layout_marginLeft="10dp"
                android:id="@+id/relativeLayout1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView9"
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13px"
                    android:text="TextView"
                    android:textSize="14sp"></TextView>

                <TextView
                    android:id="@+id/textView10"
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView9"
                    android:layout_below="@+id/textView9"
                    android:layout_marginTop="13px"
                    android:text="TextView"
                    android:textSize="14sp"></TextView>

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView10"
                    android:layout_below="@+id/textView10"
                    android:layout_marginTop="13px"
                    android:text="请连接蓝牙"
                    android:textColor="@color/red"
                    android:textSize="16sp"></TextView>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/content"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical" />


            <TextView
                android:id="@+id/value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <Button
                    android:id="@+id/button4"
                    android:background="@drawable/button_state_background_style"
                    android:textColor="@color/button_state_textcolor_style"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:text="扫描蓝牙" />
                <Button
                    android:layout_marginLeft="10dp"
                    android:id="@+id/button1"
                    android:background="@drawable/button_state_background_style"
                    android:textColor="@color/button_state_textcolor_style"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:text="连接蓝牙" />

                <Button
                    android:id="@+id/button2"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/button_state_background_style"
                    android:textColor="@color/button_state_textcolor_style"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:text="单次读卡" />

                <Button
                    android:id="@+id/button8"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/button_state_background_style"
                    android:textColor="@color/button_state_textcolor_style"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:text="上传照片" />

            </LinearLayout>

            <TableLayout
                android:id="@+id/linearLayout0"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TableRow>

                    <Button
                        android:id="@+id/button20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="循环读卡"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/button3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="关闭"
                        android:visibility="gone" />

                </TableRow>

                <TableRow>



                    <Button
                        android:id="@+id/button5"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="电量" />

                    <Button
                        android:id="@+id/button6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="获取密钥"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/button7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="设置密钥"
                        android:visibility="gone" />
                </TableRow>
            </TableLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>





