<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/layout_tab1"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/graid_view_item"
        android:orientation="vertical">

        <ImageView
            android:layout_marginTop="20dp"
            android:id="@+id/image1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:src="@drawable/mode_loading" />\
        <TextView
            android:layout_marginTop="6dp"
            android:id="@+id/text_tabName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="#444444"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_tabDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Desc"
            android:textColor="#444444"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_tab2"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:background="@drawable/graid_view_item"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_marginTop="20dp"
            android:id="@+id/image2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:src="@drawable/mode_loading" />\

        <TextView
            android:id="@+id/text_tabName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_marginTop="6dp"
            android:textColor="#444444"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_tabDesc2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Desc"
            android:textColor="#444444"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_tab3"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:background="@drawable/graid_view_item"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_marginTop="20dp"
            android:id="@+id/image3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:src="@drawable/mode_loading" />\

        <TextView
            android:id="@+id/text_tabName3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_marginTop="6dp"
            android:textColor="#444444"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_tabDesc3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Desc"
            android:textColor="#444444"
            android:textSize="14sp" />
    </LinearLayout>


</LinearLayout>