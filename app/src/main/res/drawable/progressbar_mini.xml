<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="3dip" />
            <gradient
                android:angle="270"
                android:centerY="0.75"
                android:endColor="#a6d0e7"
                android:startColor="#a6d0e7" />
        </shape>
    </item>
  
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="3dip" />
                <gradient
                    android:angle="270"
                    android:centerY="0.75"
                    android:endColor="#047700"
                    android:startColor="#047700" />
            </shape>
        </clip>
    </item>
</layer-list>